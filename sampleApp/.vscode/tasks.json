{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sampleApp build",// <-- label that appears in console when build task run
            "type": "shell",
            "command": "gcc",// <-- command to be invoked by shell 
            "args": [
                "-Wall", // display higher level of compiler warnings
                //"-O2", // enable out of bounds array warnings 
                "-g",// <-- create oject file (machine code)
                "-o",// < -- creates debug information? ask Starks 
                "sampleApp", // <-- name of executable generated by build task, source file just object files linked into single program
                "three_function_challenge.c" // <-- source file(s) included in projects 
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        }
    ]
}